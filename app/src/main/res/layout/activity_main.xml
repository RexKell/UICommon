<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ifca.uicommon.xrecycler.XRecyclerView
        android:id="@+id/main_recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/main_bottom_navigationview"></com.ifca.uicommon.xrecycler.XRecyclerView>

    <com.ifca.uicommon.bottom_navigation.BottomNavigationView
        android:id="@+id/main_bottom_navigationview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"></com.ifca.uicommon.bottom_navigation.BottomNavigationView>

</RelativeLayout>
